<body>
<div class="col-md-6" id="welcome">
    TrueFace
</div>
<div class="container">
    <div class="form-container">
        <h2>Regisztráció</h2>
        <% if(hibaRegister){ %>
            <p class="hiba" style="padding-left: 1%"><%- hibaRegister %></p>
        <% } %>
        <form method="POST" id="register-form" action="/register">
            <input type="text" name="name" placeholder="Teljes név" required>
            <input type="text" name="email" placeholder="ateemail@cimed.hu" required>
            <input type="date" name="birthday" placeholder="" required>
            <input type="password" name="password" placeholder="Jelszó" required>
            <input type="password" name="password2" placeholder="Jelszó megint" required>
            <button type="submit">Regisztráció</button>
        </form>
    </div>
    <div class="form-container">
        <h2>Bejelentkezés</h2>
        <% if(hibaLogin){ %>
            <p class="hiba" style="padding-left: 1%"><%- hibaLogin %></p>
        <% } %>
        <form method="POST" id="login-form" action="/login">
            <input type="text" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Jelszó" required>
            <button type="submit">Login</button>
        </form>
    </div>
</div>
