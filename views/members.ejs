<!DOCTYPE html>
<html lang="en">
<%- include('assets/head') %>

<body class="w-100 h-100 d-flex flex-column min-vh-100">
<%- include('assets/header') %>
<div class="d-flex flex-row justify-content-around">
    <% members.forEach(member =>{ %>
        <div class="card flex-column">
            <div class="card-header">
                <%= member[0] %>
            <% if (isUserOwner){%>
                <form action="/removeFromGroup" method="post">
                    <input type="hidden" value="<%= member[2] %>" name="userToDel">
                    <input type="hidden" value="<%= member[3] %>" name="groupFrom">
                    <button type="submit" class="btn">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="#000000"
                             version="1.1" id="Capa_1" width="20px" height="20px" color="red" viewBox="0 0 485 485" xml:space="preserve" class="trash">
                                <g>
                                <g>
                                    <rect x="67.224" width="350.535" height="71.81"/>
                                    <path d="M417.776,92.829H67.237V485h350.537V92.829H417.776z M165.402,431.447h-28.362V146.383h28.362V431.447z M256.689,431.447    h-28.363V146.383h28.363V431.447z M347.97,431.447h-28.361V146.383h28.361V431.447z"/>
                                </g>
                                </g>
                            </svg>
                    </button>
                </form>
                <%}%>
            </div>
        </div>
    <%}) %>
</div>
<%- include('assets/footer') %>
</body>
</html>