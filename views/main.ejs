<div class="flex-grid">
    <div class="left-panel">
        <div class="scrollable-content">
            <!-- Születésnapok -->
            <h2>Születésnapok</h2>
            <ul>

                <% birthdays.rows.forEach(function (birthday) { %>
                    <% let date = new Date(birthday[1]); %>
                    <% let months = ['Január', 'Február', 'Március', 'Április', 'Május', 'Június', 'Július', 'Augusztus', 'Szeptember', 'Október', 'November', 'December']; %>
                    <li><%= birthday[0] %>, <%= months[date.getMonth()] %>:<%= date.getDate() %></li>
                <% }); %>

            </ul>
        </div>
    </div>
    <div class="center-panel">
        <div class="scrollable-content">
            <!-- Posztok -->
            <h2>Posztok</h2>

            <% posts.rows.forEach(function(posts) { %>

                <div class="post" style=" border-bottom: 1px solid #ccc; padding: 10px 0;"><h3> <%= posts[2] %> </h3>
                    <p>Lájkok száma: <%= posts[3] %></p></div>
            <% }); %>

            <!-- további posztok... -->
        </div>
    </div>
    <div class="right-panel">
        <div class="scrollable-content">
            <!-- Barátok listája -->
            <h2>Barátok</h2>
            <ul>
                <% usersfriends.rows.forEach(function (friend) { %>
                    <li><%= friend %></li>
                <% }); %>

            </ul>
        </div>
    </div>
</div>


